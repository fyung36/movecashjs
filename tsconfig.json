
{
    "compilerOptions": {
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "module": "esnext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "target": "es5",
        "strictNullChecks": true,
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}